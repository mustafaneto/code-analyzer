{
  "name": "mn-analise",
  "displayName": "mn-analise",
  "publisher": "MustafaNeto",
  "icon": "assets/extensao-logo.jpg",
  "description": "Check the security of your code with this extension that integrates Visual Studio Code with ChatGPT",
  "version": "4.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mn-analise.analyzeCodeCommand",
        "title": "Search vulnerabilities"
      }
    ],
    "configuration": {
      "title": "MN-Anlise",
      "properties": {
        "mn-analise.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key."
        },
        "mn-analise.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Gemini API key."
        },
        "mn-analise.language": {
          "type": "string",
          "default": "English",
          "enum": [
            "English",
            "Português (BR)"
          ],
          "enumDescriptions": [
            "English language",
            "Português brasileiro"
          ],
          "description": "Select your preferred language for code analysis."
        },
        "mn-analise.aiProvider": {
          "type": "string",
          "default": "chatgpt",
          "enum": [
            "chatgpt",
            "gemini"
          ],
          "enumDescriptions": [
            "Use OpenAI's ChatGPT for code analysis",
            "Use Google's Gemini for code analysis"
          ],
          "description": "Select the AI provider for code analysis."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@vscode/test-electron": "^2.3.6",
    "esbuild": "^0.19.8",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "highlight.js": "^11.9.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.0.0"
  }
}
